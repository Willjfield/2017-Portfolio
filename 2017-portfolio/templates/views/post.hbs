<div class="container">
	<div class="row">
		<div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
			<article>
				<p><a href="/">&larr; Back</a></p>
				<hr>
				<header>
					<h1>{{data.post.title}}</h1>
				</header>
				{{#if data.post.video}}<video loop="true" autoplay="true" src="./uploads/{{ data.post.video.filename }}"></video>{{/if}}
				<div class="post">
					{{!-- {{#if data.post.image}}<img src="{{{cloudinaryUrl data.post.image width=250 crop='fit' }}}" class="img-responsive">{{/if}} --}}
					{{{data.post.content.main}}}
				</div>
			</article>
		</div>
	</div>
</div>
{{#if data.post.content.scripts}}{{{data.post.content.scripts}}}{{/if}}
